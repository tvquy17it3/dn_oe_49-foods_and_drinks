<div class="mt-5 mx-auto" >
  <div class="row justify-content-center">
    <aside class="col-md-2">
      <section class="user_info">
        <h3>
          <%= gravatar_for @user %>
          <div class="card-body">
            <h5 class="card-title"><%= @user.name %><br/></h5>
            <p class="card-text"><h5><%= @user.email %></h5></p>
            <p><h6>
              <%= l @user.created_at, format: :long %><br/>
              <%= l @user.updated_at, format: :long %></h6>
            </p>
          </div>
        </h3>
      </section>
    </aside>
  </div>
</div>
